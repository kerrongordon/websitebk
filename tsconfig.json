{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": "src",
    "paths": {
      "@pipe/*": ["app/pipe/*"],
      "@services/*": ["app/services/*"],
      "@interface/*": ["app/interface/*"],
      "@directives/*": ["app/directives/*"],
      "@components/*": ["app/components/*"]
    }
  }
}
